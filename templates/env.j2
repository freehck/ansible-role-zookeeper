zk_id={{ zookeeper_node.id }}
{% for node in zookeeper_nodes %}
{% if node.id == zookeeper_node.id %}
zk_server.{{ node.id }}=0.0.0.0:2888:3888
{% else %}
zk_server.{{ node.id }}={{ node.bind_ip | default(zookeeper_bind_ip) }}:{{ node.peerport | default(zookeeper_peerport) }}:{{ node.leaderport | default(zookeeper_leaderport) }}
{% endif %}
{% endfor %}
